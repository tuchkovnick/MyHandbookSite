@model ItemType 
<div>
    <h2>Добавить тип</h2>
    <div>
        <form asp-area="Admin" asp-controller="Types" asp-action="Add" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />                       

            <div asp-validation-summary="All"></div>
            <div class="div-box">
                <label asp-for="Title"></label>
                <input asp-for="Title" />
                <span asp-validation-for="Title"></span>
            </div>
            <input type="submit" value="Ок" />
        </form>
    </div>
</div>